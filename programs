#include <iostream>  
using namespace std;  
class reverse
{
	int n,rem;
	int rev=0;
	public:
		void in()
		{
			cout<<"ENTER A NUMBER FOR REVERSING: ";
			cin>>n;
		}
		void solve()
		{
			while(n!=0)
			{
				rem=n%10;
				rev=rev*10+rem;
				n=n/10;
			}
			cout<<"REVERSE OF NUMBER IS: "<<rev<<endl;
		}
};
int main()  
{
  reverse r;
  r.in();   
  r.solve();
  return 0;  
}
