#include <iostream>
using namespace std;
class circle
{
	private:
		float rad;
		public:
			void in()
			{
				cout<<"ENTER RADIUS: ";
				cin>>rad;
			}
			float circum()
			{
				float circ;
				circ=2*3.14*rad;
				return circ;
			}
};
int main()
{
circle c;
c.in();
c.circum();
cout<<"CIRCUMFERENCE OF CIRCLE IS: "<<c.circum()<<endl;
}
