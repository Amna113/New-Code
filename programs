#include<iostream>
using namespace std;
class distancee
{
	float km,miles;
	public:
		void in()
		{
			cout<<"ENTER the distance in kilometer PER hour: ";
			cin>>km;
		}
		void cal()
		{
			cout << "Converting kilometers per hour to miles per hour :\n";
			miles=(km*0.6213712);
			cout<<"THE "<<km<<" KM IS "<<miles<<"IN MILES PER HOUR."<<endl;
		}
};
int main()
{
	distancee d;
	d.in();
	d.cal();
}
