#include <iostream>
using namespace std;
class maximum
{
	private:
		int num[3];
	public:
	void in()
	{
		cout<<"ENTER THREE NUMBERS:"<<endl;
		for(int i=0;i<3;i++)
		{
			cin>>num[i];
		}
	}
	int max()
	{
		for(int i=0;i<3;i++)
		{
			int max=num[0];//max=1
			if(num[0]<num[1])//1 2 3
			{
				max=num[1];
				if(num[1]<num[2])
				max=num[2];
			}
			else if(num[0]<num[2])
			max=num[2];
			return max;
		}
	}	
};
int main()
{
	maximum m;
	m.in();
	m.max();
	cout<<"MAXIMUM NUMBER IS: "<<m.max()<<endl;
}
