#include <iostream>
using namespace std;
class summution
{
	int a,b;
	public:
		void in()
		{
			cout<<"ENTER 1ST NUMBER: ";
			cin>>a;
			cout<<"ENTER 2ND NUMBER: ";
			cin>>b;
		}
		int sum()
		{
			int sum;
			sum=a+b;
			return sum;
		}
};
int main()
{
	summution s;
	s.in();
	s.sum();
	cout<<"SUM OF NUMBERS IS: "<<s.sum()<<endl;
}
