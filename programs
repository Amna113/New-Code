#include <iostream>
using namespace std;
int main()
{
	int a,b;
	int temp;
	cout<<"ENTER 1ST NUMBER: ";
	cin>>a;
	cout<<"ENTER 2ND NUMBER: ";
	cin>>b;
	temp=a;
	a=b;
	b=temp;
	cout<<"     AFTER SWAPPING:"<<endl;
	cout<<"1ST NUMBER IS: "<<a<<endl;
	cout<<"2ND NUMBER IS: "<<b<<endl;
}
