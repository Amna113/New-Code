#include <iostream>
using namespace std;
class factorial
{
	int n,fact=1;
	public:
		void in()
		{
			cout<<"ENTER NUMBER: "<<endl;
			cin>>n;
		}
		void sol()
		{
			for(int i=1;i<=n;i++)
			{
				fact=fact*i;
			}
			cout<<"FACTORIAL OF NUMBER IS: "<<fact<<endl;
		}
};
int main()
{
	factorial f;
	f.in();
	f.sol();
}
