#include <iostream>
using namespace std;
class sphere
{
	float rad;
	public:
		void in()
		{
			cout<<"ENTER RADIUS: ";
			cin>>rad;
		}
		void volume()
		{
			float vol;
			vol=(4*3.14*rad*rad)/3;
			cout<<"VOLUME OF SPHERE: "<<vol<<endl;
		}
};
int main()
{
	sphere s;
	s.in();
	s.volume();
}
