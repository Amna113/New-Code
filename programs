#include <iostream>
using namespace std;
class cuboid
{
	public:
		void volume(int len,int wid,int hig)
		{
			int vol;
			vol=len*wid*hig;
			cout<<"VOLUME OF CUBOID IS: "<<vol<<endl;
		}
};
int main()
{
	int l,w,h;
	cuboid c;
   cout<<"ENTER LENGTH OF CUBOID: ";
	cin>>l;
	cout<<"ENTER WIDTH OF CUBOID: ";
	cin>>w;
	cout<<"ENTER HIGHT OF CUBOID: ";
	cin>>h;
	c.volume(l,w,h);	
}
