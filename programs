#include <iostream>
using namespace std;
class number
{
	int a;
	int temp=0;
	public:
		void in()
		{
			cout<<"ENTER A NUMBER: ";
			cin>>a;
		}
		void check()
	{
		for(int i=1;i<=a;i++)
		{
			if(a%2==0)
		{
			temp++;
		}
		}
		if(temp==2)
		{
			cout<<"NUMBER IS PRIME."<<endl;
		}
		else
		cout<<"NUMBER IS NOT PRIME."<<endl;
	}
};
int main()
{
	number n;
	n.in();
	n.check();
	return 0;
}
