#include <iostream>
using namespace std;
class miniumum
{
	private:
		int num[3];
	public:
	void in()
	{
		cout<<"ENTER THREE NUMBERS:"<<endl;
		for(int i=0;i<3;i++)
		{
			cin>>num[i];
		}
	}
	int min()
	{
		for(int i=0;i<3;i++)
		{
			int min=num[0];
			if(num[0]>num[1])
			{
				min=num[1];
				if(num[1]>num[2])
				min=num[2];
			}
			else if(num[0]>num[2])
			min=num[2];
			return min;
		}
	}	
};
int main()
{
	miniumum m;
	m.in();
	m.min();
	cout<<"MINIMUM NUMBER IS: "<<m.min()<<endl;
}
