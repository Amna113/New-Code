#include <iostream>
using namespace std;
class rectangle
{
	int l,w;
	int a,para;
	public:
	void in()
	{
		cout<<"ENTER LENGTH: ";
		cin>>l;
		cout<<"ENTER WIDTH: ";
		cin>>w;
	}
	void area()
	{
		a=l*w;
		cout<<"AREA OF RECTANGLE: "<<a<<endl;
	}
	void parameter()
	{
		para=2*(l*w);
		cout<<"PARAMETER OF RECTANGLE: "<<para<<endl;
	}
};
int main()
{
	rectangle r;
	r.in();
	r.area();
	r.parameter();
}
