#include <iostream>
using namespace std;
class triangle
{
	int a,b,c;
	public:
		void in()
		{
			cout<<"ENTER 1st angle of triangle: ";
			cin>>a;
			cout<<"ENTER 2nd angle of triangle: ";
			cin>>b;
		}
		void thired()
		{
			c=a+b;
			c=180-c;
			cout<<"THE THIRED ANGLE IS: "<<c<<endl;
		}
};
int main()
{
	triangle t;
	t.in();
	t.thired();
}
