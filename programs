#include<iostream>
using namespace std;
class Fibonacci
{
	int n,c;
	int a=0,b=1;
	public:
		void in()
		{
			cout<<"ENTER NUMBER OF SERIES: ";
			cin>>n;
		}
		void fib()
		{
			 cout << "Fibonacci Series is: " << endl;
  			for (int i=a; i<=n; i++)
  		{
    		cout <<a<< "  ";
    		c=a+b;
    		a=b;
    		b=c;
  		}
		}
};
int main()
{
  Fibonacci f;
  f.in();
  f.fib();
  return 0;
}
