class number
{
	int a;
	public:
		void in()
		{
			cout<<"ENTER A NUMBER: ";
			cin>>a;
		}
		void check()
		{
			if(a%2==0)
			{
				cout<<"NUMBER IS EVEN."<<endl;
			}
			else
			cout<<"NUMBER IS ODD."<<endl;
		}
};
int main()
{
	number c;
	c.in();
	c.check();
}
